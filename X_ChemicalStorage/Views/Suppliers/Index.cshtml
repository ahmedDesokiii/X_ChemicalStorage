        let lbTitleMsgDelete = '@Html.Raw("Delete Supplier")';
        let lbTextMsgDelete = '@Html.Raw($"Are you sure !  Do you want to delete the Supplier data and everything related to it, including requests and records? ")';
        let lbconfirmButtonText = '@Html.Raw("Yes , Remove")';
        let lbcancelButtonText = '@Html.Raw("Cancle")';

        let lbTitleDeletedOk = '@Html.Raw("Delete Supplier Done")';
