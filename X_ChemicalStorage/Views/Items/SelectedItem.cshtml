@inject IAuthorizationService AuthorizationService
@inject UserManager<ApplicationUser> userManager
@model ItemViewModel
@{
    ViewData["Title"] = Model?.NewItem?.Name;
    int cNo = 0;
    int tNo = 0;
    }
<div class="card border-0 py-3" style="background-color:#032b42 !important; border-radius:0 0 75px 0 " dir="ltr">
    <div class="d-flex text-center mx-auto">
        <a asp-controller="Items" asp-action="index" class="text-center fs-4 fw-bold text-decoration-none" style="color:#415E72 !important ">Items</a>
        <i class="bi bi-chevron-double-right fw-bold fs-3 mt-2 mx-3" style="color:#415E72 !important"></i>
        <a class="text-center fs-1 fw-bold text-decoration-none" style="color:#415E72 !important ">@ViewData["Title"]</a>
    </div>
</div>
<section class="text-center pb-3 d-flex container-fluid justify-content-center mx-auto" dir="ltr">
    <section class="container-fluid mt-3 " dir="ltr">
        <div class="row mb-2">
            <div class="col-md-1"></div>

            <div class=" d-flex col-md-4 col-6" >
                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Items.Print_ItemBarcode).Result.Succeeded)
                {
                    <a class="btn btn-outline-primary btn-sm py-0 d-flex rounded rounded-3 " title="Print Barcode" asp-controller="Items" asp-action="PrintItemBarcode" asp-route-barcodeFile="@Model.NewItem.BarcodeImage" asp-route-Code="@Model.NewItem.Code">
                        <img src="~/images/barcode.png" alt="Save" height="40" class="mx-2">
                        <span class="fw-bold fs-6 pt-2 pe-3 pt-sm-2 pe-sm-3">Print Barcode</span>
                    </a>
                }
                
            </div>
            <div class=" d-flex col-md-6 col-6">
                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Lots.Create_Lots).Result.Succeeded)
                {
                    <a class="btn btn-outline-warning btn-sm  d-flex rounded rounded-3 " title="Add New Lot" asp-controller="Items" asp-action="CreateLot" asp-route-Id="@Model.NewItem.Id" >
                        <i class="bi bi-cart-plus-fill mx-2 fs-4"></i>
                        <span class="fw-bold fs-6 pt-2 pe-3">Create New Lot</span>
                    </a>
                }
            </div>
        </div>
        
        
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4 col-12">
                <div class="card p-0">
                    <div class="card-header py-1 d-flex align-items-center justify-content-start bg-info-subtle">
                        <i class="bi bi-pin-angle-fill link-primary fs-4 pe-3"></i>
                        <span class="fs-4 fw-bold link-primary">Item Details</span>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <!-- Item Image -->
                        <div class="input-group mt-2 row mx-auto">
                            <img src="~/images/item.png" class="mx-auto w-50" />
                        </div>
                        <!-- Item Barcode -->
                        <div class="input-group mt-2 row mx-auto">
                            <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4 col-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Item Barcode &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <div class="card col-md-8 col-8 py-1" style="border-top-right-radius : 20px ;">
                                <div class="card-body row p-0 mx-auto" style="border-top-right-radius : 20px ;">
                                    <img src="@Model?.NewItem?.BarcodeImage" height="60" />
                                </div>
                            </div>
                        </div>
                        
                        <!-- Item Code -->
                        <div class="input-group mt-2 row mx-auto">
                            <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4 col-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Item Code &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <input disabled asp-for="@Model.NewItem.Code" class="form-control text-center fw-bold col-md-8 col-8" autocomplete="on" aria-required="true" placeholder="Building Name ..." type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="border-top-right-radius : 20px ;">
