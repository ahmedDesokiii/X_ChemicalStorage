@model SupplierViewModel


<!-- Modal -->
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog card card-success card-outline">
        <div class="modal-content">
            <div class="modal-header bg-danger-subtle" dir="rtl">
                <span class="fs-4 fw-bold modal-title" id="title"></span>
                <a href="#" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
            </div>
            <div class="modal-body">
                <form asp-action="Save" asp-controller="Suppliers" method="post">
                    <input type="text" hidden class="form-control" asp-for="NewSupplier.Id" id="suppId" value="0" />
                    <!-- SupplierName -->
                    <div class="input-group mt-2 row mx-auto">
                        <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; اسم المورد &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        <input id="suppName" required asp-for="@Model.NewSupplier.Name" class="form-control text-center" autocomplete="on" aria-required="true" placeholder="ادخل اسم المورد ..." type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="border-left-color:red;border-top-left-radius : 20px ;">
                    </div>
                    <span asp-validation-for="@Model.NewSupplier.Name" class="text-danger"></span>

                    <!-- SupplierPhone -->
                    <div class="input-group mt-2 row mx-auto">
                        <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; تليفون المورد &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        <input id="suppPhone" required asp-for="@Model.NewSupplier.Phone" class="form-control text-center" autocomplete="on" aria-required="true" placeholder="ادخل تليفون المورد  ..." type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="border-top-left-radius : 20px ;">
                    </div>
                    <span asp-validation-for="@Model.NewSupplier.Phone" class="text-danger"></span>
                    
                    <!-- SupplierAdress -->
                    <div class="input-group mt-2 row mx-auto">
                        <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; عنوان المورد &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        <input id="suppAdress" required asp-for="@Model.NewSupplier.Adress" class="form-control text-center" autocomplete="on" aria-required="true" placeholder="ادخل  عنوان المورد..." type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="border-top-left-radius : 20px ;">
                    </div>
                    <span asp-validation-for="@Model.NewSupplier.Adress" class="text-danger"></span>

                    <!-- SupplierEmail -->
                    <div class="input-group mt-2 row mx-auto">
                        <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; البريد الالكتروني &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        <input id="suppEmail" required asp-for="@Model.NewSupplier.Email" class="form-control text-center" autocomplete="on" aria-required="true" placeholder="ادخل البريد الالكتروني للمورد  ..." type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="border-top-left-radius : 20px ;">
                    </div>
                    <span asp-validation-for="@Model.NewSupplier.Email" class="text-danger"></span>

                   

                    <div class="modal-footer" style="padding:0 15px 15px 0">
                        <input type="submit" class="btn btn-success" value="Save changes" id="btnSave" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغــاء</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

