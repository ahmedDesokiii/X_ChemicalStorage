                        <i class="bi bi-pin-angle-fill link-warning fs-4 pe-3"></i>
                        <span class="fs-4 fw-bold link-warning">Item Lots</span>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body px-3">
                        @if (!Model.LotsList.Any())
                        {
                            <div class="alert  alert-warning mt-5">
                                <h4 class="alert-heading">No Lots in this item</h4>
                                <p class="mb-0">No lots have been added to this item yet.</p>
                            </div>
                        }
                        else
                        {
                            <div id="Users" class="tabcontent mx-2">
                                <table class="table table-hover display nowrap  px-0 table-bordered border-primary-subtle" id="tableUser">
                                    <thead>
                                        <tr class="text-center fs-5">
                                            <th class=" text-white text-center fs-5" style="background-color:#CB6040"><span class="fw-bold">Barcode</span></th>
                                            <th class=" text-white text-center fs-5" style="background-color:#CB6040"><span class="fw-bold">Expiry Date</span></th>
                                            <th class=" text-white text-center fs-6" style="background-color:#CB6040"><span class="fw-bold">Available<br class="m-0 p-0">Quantity</span></th>
                                            <th class=" text-white text-center fs-5" style="background-color:#CB6040"><span class="fw-bold">Lot SDS</span></th>
                                            <th class=" text-white text-center fs-6" style="background-color:#CB6040"><span class="fw-bold">Manufacture <br class="m-0 p-0">Date</span></th>
