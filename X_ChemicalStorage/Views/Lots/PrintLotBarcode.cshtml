@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lot Sticker</title>
    <link href="~/css/sticker.css" rel="stylesheet" />
</head>
<body>

    <div class="sticker">
        <img src="@ViewBag.BarcodePath" alt="Barcode" />
        <div class="item-code">@ViewBag.ItemCode</div>
        <div class="item-name">@ViewBag.LotNum</div>
        <div class="item-name">@ViewBag.ExpiryDate</div>
    </div>

    <script>
        window.print();
    </script>

</body>
</html>

