@model LocationViewModel

@{
    ViewData["Title"] = "قائمة أماكن التخزين";
    int cNo = 0;

}
<div class="card border-0 pt-3" style="background-color:#032b42 !important; border-radius:0 0 0 80px ">
    <span class="text-center fw-bold fs-1  pb-3" style="color:#415E72 !important ">
        قائمة أماكن التخزين
        <i class="bi bi-pin-map-fill pe-2 fs-1"></i>
    </span>
</div>
<!-- Main content -->

<section class="container-fluid mt-3">
    <div class="row">

        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card p-0">
                <div class="card-header d-flex align-items-center justify-content-start bg-info-subtle">
                    @if (AuthorizationService.AuthorizeAsync(User, Permissions.ManufacuterCompanies.Create_ManufacuterCompanies).Result.Succeeded)
                    {
                        <a class="btn fw-bold btn-outline-warning bg-transparent border-0 text-center p-0 mx-1 fs-2" title="إضافة مكان تخزين جديدة" onclick="Rest()" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-plus-square-fill"></i></a>
                    }
                </div>
                <!-- /.card-header -->

                <div class="card-body p-0">
                    <!-- Tab links -->
                    @*  <div class="tab">
                        <button class="tablinks" onclick="openCity('event', 'Users')" id="defaultOpen">قائمة المستخدمين</button>
                    </div> *@
                    <!-- Tab content -->
                    @if (!Model.LocationsList.Any())
                    {
                        <div class="alert  alert-warning mt-5">
                            <h4 class="alert-heading">لا يوجد شركات مصنعة !</h4>
                            <p class="mb-0">لم يتم اضافة شركات مصنعة  للتطبيق حتي الآن</p>
                        </div>
                    }
                    else
                    {

                        <div id="Users" class="tabcontent">
                            <table class="table table-hover display nowrap  px-0 table-bordered border-primary-subtle" id="tableUser">
                                <thead>
                                    <tr class="text-center">
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;"></th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">الاسـم</th>
                                        
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">الوصف</th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cat in Model.LocationsList)
                                    {
                                        cNo++;

                                        <tr class="text-center">
                                            <td class="fs-6 text-center px-1"><span class="">@cNo</span></td>
                                            <td class="fs-6 text-center px-1"><span class="link-dark fw-bold">@cat.LocationName</span></td>
                                            <td class="fs-6 text-center px-1">@cat.LocationDetails</td>

                                            <td class="py-1">
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.ManufacuterCompanies.Details_ManufacuterCompanies).Result.Succeeded)
                                                {
                                                    <a class="btn fw-bold btn-outline-dark bg-transparent border-0 text-center p-0 mx-1 fs-5" title="تفاصيل الشركة المصنعة" asp-controller="ManufacuterCompanies" asp-action="SelectedManufacuterCompany" asp-route-Id="@cat.Id"><i class="bi bi-eye-fill fs-4"></i><br></a>
                                                }
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.ManufacuterCompanies.Edit_ManufacuterCompanies).Result.Succeeded)
                                                {
                                                    <a class="btn fw-bold btn-outline-dark bg-transparent border-0 p-0 mx-1 fs-4" title="تعديل شركة مصنعة" onclick="EditManufacuterCompany('@cat.Id','@cat.LocationName','@cat.LocationDetails')" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-pencil-square"></i></a>
                                                }
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.ManufacuterCompanies.Delete_ManufacuterCompanies).Result.Succeeded)
                                                {
                                                    <a class="btn fw-bold btn-outline-dark bg-transparent border-0 p-0 mx-1 fs-4" title="حذف شركة مصنعة" onclick="DeleteCategory('@cat.Id')"><i class="bi bi-trash3-fill"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- /.card -->
        </div>
        <div class="col-md-1"></div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<partial name="_SaveLocation" model="new LocationViewModel()" />

@section Scripts {
    <script src="~/js/Users.js"></script>
    @if (!string.IsNullOrEmpty(Context.Session.GetString(Helper.MsgType)))
    {
        if (Context.Session.GetString(Helper.MsgType) == Helper.Success)
        {
            <script>

                Swal.fire({
                    title: '@Context.Session.GetString(Helper.Title)',
                    text: '@Html.Raw(@Context.Session.GetString(Helper.Msg))',
                    confirmButtonText: 'Ok',
                    icon: 'success'
                });
            </script>

        }
        else
        {
            <script>

                Swal.fire({
                    title: '@Context.Session.GetString(Helper.Title)',
                    text: '@Html.Raw(@Context.Session.GetString(Helper.Msg))',
                    confirmButtonText: 'Ok',
                    icon: 'error'
                });
            </script>
        }
        Context.Session.SetString(Helper.MsgType, "");
    }

