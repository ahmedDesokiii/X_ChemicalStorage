@using X_ChemicalStorage.ViewModels
@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int cNo = 0;
    string state = "";
}
<div class="card border-0 pt-3" style="background-color:#032b42 !important; border-radius:0 0 75px 0 " dir="ltr">
    <span class="text-center fw-bold fs-1  pb-3" style="color:#415E72 !important ">
       Users
        <i class="bi bi-people-fill ps-2 fs-1"></i>
    </span>
</div>
<!-- Main content -->

<section class="container-fluid my-3" dir="ltr">
    <div class="row">

        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card p-0">
                <div class="card-header d-flex align-items-center justify-content-start bg-info-subtle">
                    <!-- Button trigger modal -->
                   @*  <a  title="إضافة مستخدم جديد" class="btn btn-sm pb-0  btn-warning rounded-3" asp-action="AddUser" asp-controller="Users">
                        <i class="bi bi-plus fs-2 m-0 fw-bold"></i> 
                    </a> *@
                   
                    <a class="btn fw-bold btn-outline-warning bg-transparent border-0 text-center p-0 mx-1 fs-2" title="Add New User" asp-action="AddUser" asp-controller="Users"><i class="bi bi-plus-square-fill"></i></a>

                </div>
                <!-- /.card-header -->

                <div class="card-body p-0">
                    <!-- Tab links -->
                    @*  <div class="tab">
                        <button class="tablinks" onclick="openCity('event', 'Users')" id="defaultOpen">قائمة المستخدمين</button>
                    </div> *@
                    <!-- Tab content -->
                    @if (!Model.Any())
                    {
                        <div class="alert  alert-warning mt-5">
                            <h4 class="alert-heading">No Users</h4>
                            <p class="mb-0">No Users have been added to the app yet.</p>
                        </div>
                    }
                    else
                    {

                        <div id="Users" class="tabcontent mx-3" >
                            <table class="table table-hover display nowrap  px-0 table-bordered border-primary-subtle" id="tableUser">
                                <thead>
                                    <tr class="text-center">
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;"></th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">Name</th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">UserName</th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">Phone</th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">Roles</th>
                                        <th class=" text-white text-center fs-5" style="background-color:#032b42 !important;">Status</th>
                                        <th class=" text-white text-center fs-5" style="color:#415E72 !important ; background-color:#032b42 !important;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        cNo++;
                                        if (user.CurrentState == 0)
                                            state = "Inactive";
                                        if (user.CurrentState == 1)
                                            state = "Suspended";
                                        if (user.CurrentState == 2)
                                            state = "Active";

                                        <tr class="text-center">
                                            <td class="text-center">@cNo</td>
                                            <td class="text-center"><span class="link-dark fw-bold">@user.FullName</span></td>
                                            <td class="text-center">@user.UserName</td>
                                            <td class="text-center">@user.PhoneNumber</td>
                                            <td class="text-center">@string.Join(" , ", user.Roles.ToList())</td>
                                            
                                            @if (state.Equals("Active"))
                                            {
                                                <td class=" link-success"><span class="bg-success-subtle p-2 fw-bold rounded-5">@state</span></td>
                                            }
                                            else if (state.Equals("Suspended"))
                                            {
                                                <td class="  link-warning"><span class="bg-warning-subtle p-2 fw-bold rounded-5">@state</span></td>
                                            }
                                            else if (state.Equals("Inactive"))
                                            {
                                                <td class="  link-danger"><span class="bg-danger-subtle p-2 fw-bold rounded-5">@state</span></td>
                                            }

                                            <td class="py-1">
                                                <a class="btn fw-bold btn-outline-dark bg-transparent border-0 text-center p-0 mx-1 fs-4" title="Manage Roles" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id"><i class="bi bi-view-stacked"></i></a>
                                                <a class="btn fw-bold btn-outline-dark bg-transparent border-0 p-0 mx-1 fs-4" title="Edit" asp-controller="Users" asp-action="EditUser" asp-route-userId="@user.Id"><i class="bi bi-pencil-square"></i></a>
                                                <a class="btn fw-bold btn-outline-dark bg-transparent  border-0 p-0 mx-1 fs-4" title="Delete" onclick="DeleteUser('@user.Id')" @* asp-route-userId="@user.Id" *@><i class="bi bi-trash3-fill"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- /.card -->
        </div>
        <div class="col-md-1"></div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts {
    <script src="~/js/Users.js"></script>
    <script>

      
        let lbTitleMsgDelete = '@Html.Raw("Delete User")';
        let lbTextMsgDelete = '@Html.Raw($"Are you sure !  Do you want to delete the User data and everything related to it, including requests and records? ")';
        let lbconfirmButtonText = '@Html.Raw("Yes , Remove")';
        let lbcancelButtonText = '@Html.Raw("Cancle")';

        let lbTitleDeletedOk = '@Html.Raw("Delete User Done")';
        let lbMsgDeletedOkRole = '@Html.Raw("The User data has been successfully deleted!")';
        let lbSuccess = '@Html.Raw(Helper.Success)';
    </script>
    @if (!string.IsNullOrEmpty(Context.Session.GetString(Helper.MsgType)))
    {
        if (Context.Session.GetString(Helper.MsgType) == Helper.Success)
        {
            <script>

                Swal.fire({
                    title: '@Context.Session.GetString(Helper.Title)',
                    text: '@Html.Raw(@Context.Session.GetString(Helper.Msg))',
                    confirmButtonText: 'Ok',
                    icon: 'success'
                });
            </script>

        }
        else
        {
            <script>

                Swal.fire({
                    title: '@Context.Session.GetString(Helper.Title)',
                    text: '@Html.Raw(@Context.Session.GetString(Helper.Msg))',
                    confirmButtonText: 'Ok',
                    icon: 'error'
                });
            </script>
        }
        Context.Session.SetString(Helper.MsgType, "");
    }
   
}

