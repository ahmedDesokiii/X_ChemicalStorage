@model RoleFormViewModel


<!-- Modal -->
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog card card-success card-outline">
        <div class="modal-content">
            <div class="modal-header bg-danger-subtle" dir="rtl">
                <span class="fs-4 fw-bold modal-title" id="title"></span>
                <a href="#" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
            </div>
            <div class="modal-body">
                <form asp-action="_SaveRole" asp-controller="Roles" method="post">
                    <input type="text" hidden class="form-control" asp-for="RoleId" id="roleId" />
                    <!-- RoleName -->
                    <div class="input-group mt-2 row mx-auto">
                        <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; اسم المجموعة &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        <input id="roleName" required asp-for="@Model.Name" class="form-control text-center" autocomplete="on" aria-required="true" placeholder="ادخل اسم المجموعة ..." type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" style="border-left-color:red;border-top-left-radius : 20px ;">
                    </div>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                    <!-- RoleDetails -->
                    <div class="input-group mt-2 mb-3 row mx-auto">
                        <span class="input-group-text bg-info-subtle fw-bold rounded-end-3 col-md-4" id="inputGroup-sizing-default ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; وصف المجموعة &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        <textarea id="roleDetails" class="form-control text-center" asp-for="@Model.Details" placeholder=" ادخل وصف المجموعة ..." rows="3" cols="50" style="border-top-left-radius : 20px ;"></textarea>
                    </div>

                    <div class="modal-footer" style="padding:0 15px 15px 0">
                        <input type="submit" class="btn btn-success" value="Save changes" id="btnSave" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغــاء</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

