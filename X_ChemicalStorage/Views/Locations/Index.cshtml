        let lbconfirmButtonText = '@Html.Raw("نعم , احذف الشركة المصنعة")';
        let lbcancelButtonText = '@Html.Raw("إلغـاء")';

        let lbTitleDeletedOk = '@Html.Raw("تم الحذف")';
        let lbMsgDeletedOkRole = '@Html.Raw("تم حذف بيانات الشركة المصنعة بنجاح!")';
